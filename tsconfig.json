{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "cypress",

    "src/*.test.ts",
    "src/*.test.tsx",
    "src/*.test-d.ts",
    "src/*.test-d.tsx",
    "src/__mocks__",

    "src/stories",
    "src/*.stories.ts",
  ],
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,

    "paths": {
      "@/*": ["./src/components/*"]
    }
  },
}
